@model OnlineRecruitmentSystemMVC.Models.JobSeekerMvcModel

@{
    ViewBag.Title = "Edit";
}


<style>
    #header {
        background-color: #eee;
        margin: 10px;
        padding: 10px;
    }

    .control-label {
        text-transform: uppercase;
        font-size: large;
    }

    .btn-success {
        width: 100px;
        font-size: 20px;
        margin-left: 30px;
    }

    .btn-primary {
        width: 140px;
        font-size: 17px;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="header">
        <center><h2>JobSeeker</h2></center>
        <center><h4>Edit Details</h4></center>
    </div>

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*  @Html.LabelFor(model => model.jobSeekerID, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.jobSeekerID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.jobSeekerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.userId, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.userId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.address, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.experience, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @Html.EditorFor(model => model.experience, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.experience, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.profession, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @Html.EditorFor(model => model.profession, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.profession, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.skillset, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @Html.EditorFor(model => model.skillset, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.skillset, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.resume, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                @*@Html.EditorFor(model => model.resume, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="file" name="resume" id="resume" class="form-control"  />
                @Html.ValidationMessageFor(model => model.resume, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.qualification, htmlAttributes: new { @class = "control-label col-md-offset-2 col-md-2" })
            <div class="col-md-offset-3 col-md-5">
                <select name="@Html.NameFor(model => model.qualification)" class="form-control">
                    <option value="" selected disabled>-- Select Qualification --</option>
                    <option value="BTech">BTech</option>
                    <option value="BE">BE</option>
                    <option value="MTech">MTech</option>
                    <option value="MBA">MBA</option>
                    <option value="CS">CS</option>
                    <option value="CA">CA</option>
                </select>
                @Html.ValidationMessageFor(model => model.qualification, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding-top:20px">
            <div class="col-md-offset-5 col-md-4 ">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<hr />
<div>
    <center><a href="@Url.Action("Details","JobSeekers",new { id=Model.userId})" class="btn btn-primary"><i class="fa fa-arrow-left"></i>Preview</a></center>

</div>

