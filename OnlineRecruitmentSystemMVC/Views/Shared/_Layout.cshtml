<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .background {
            /*background-image: url('../../Content/Images/bg2.jpg');*/
            /*background-image: url('../../Content/Images/bg7.jpg');*/
            /*background-image: url('../../Content/Images/bg9.jpg');*/
            background-color: #adbcbc;
        }

        .back {
            background-color: #2c3445;
        }
    </style>
</head>
<body class="background">
    <div class="navbar navbar-inverse navbar-fixed-top back ">
        <div style="margin-left: 30px; margin-right:60px">
            <div class="navbar-header  ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Recruitment", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (Session["UserID"] == null)
                    {
                        <li>
                            @Html.ActionLink("Sign In", "SignIn", "User")
                        </li>
                    }
                    @if (Session["UserID"] != null)
                    {
                        <li>
                            @Html.ActionLink("Sign Out", "SignIn", "User")
                        </li>
                    }

                    @* <li>@Html.ActionLink("Sign In", "Index", "Account")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class=" container body-content">
        @RenderBody()

        <footer>
            @*<p>&copy; @DateTime.Now.Date - Online Recruitment System</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
